{% extends 'layoutUser.html.twig' %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
	<section class="category-list text-center">
		<h1 class="category-title m-5">{{ category.name }}</h1>

		<div class="bloc-video">
			<div class="row justify-content-center">
				{% for video in videos %}
					<div class="col-10 col-md-4 my-4">
						<a href="{{path('app_video_show', {'video': video.id})}}" class="link-card">
							<div class="link-home ratio ratio-16x9 d-flex justify-content-center">
								<video class="video-col" controls>
									<source src="{{video.videoFileName}}" type="video/mp4">
								</video>
							</div>
							<div class="title-view mt-2 d-flex justify-content-between align-items-start">
								<h2 class="mx-2 mb-0">{{video.name}}</h2>
								<p class="mx-2 mb-0">{{video.view ~ ' vues'}}</p>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>{% endblock %}</section>{% endblock %}
