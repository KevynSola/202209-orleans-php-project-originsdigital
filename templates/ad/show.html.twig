{% extends 'layoutAdmin.html.twig' %}

{% block title %}Advertisement | Afficher
{% endblock %}

{% block body %}
	<div class="video-show container-fluid p-3">
		<h1 class="text-center m-3">{{ "afficher une pub"|upper }}</h1>

        {{ include('ad/_delete_form.html.twig') }}
		<table class="table flex-wrap text-light my-3">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ advertisement.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ advertisement.name }}</td>
				</tr>
				<tr>
					<th>Poster</th>
					<td>{{ advertisement.poster }}</td>
				</tr>
				<tr>
					<th>LinkTo</th>
					<td>{{ advertisement.linkTo }}</td>
				</tr>
			</tbody>
		</table>
		<div class="buttons my-5 pb-3">
			<a class="btn btn-primary me-3"  href="{{ path('app_ad_index') }}">back to list</a>
			<a class="btn btn-secondary"  href="{{ path('app_ad_edit', {'id': advertisement.id}) }}">edit</a>
		</div>
	</div>
{% endblock %}
