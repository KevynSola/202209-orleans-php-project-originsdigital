{% extends 'layoutAdmin.html.twig' %}

{% block title %}Admin | Index publicités
{% endblock %}

{% block body %}
	<div class="admin-list container-fluid mb-4">
		<div class="row d-flex justify-content-center">
			<h1 class="video-index-title text-center">{{ "index des publicités"|upper }}</h1>
			<section class="video-summary flex-wrap ps-4 m-2">
				<a class="ads-new btn btn-outline-primary my-4" href="{{path('app_ad_new')}}">Ajouter une publicités</a>

				<table class="w-100">
					<thead class="video-field pt-2">
						<tr>
							<th>Nom</th>
							<th>Image</th>
							<th>Lien</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody class="p-2">
						{% for advertisement in advertisements %}
							<tr>
								<td>{{ advertisement.name }}</td>
								<td>{{ advertisement.poster }}</td>
								<td>{{ advertisement.linkTo }}</td>
								<td>
									<a class="btn btn-primary mt-2 me-2" href="{{ path('app_ad_show', {'id': advertisement.id}) }}">Afficher</a>
									<a class="btn btn-secondary mt-2" href="{{ path('app_ad_edit', {'id': advertisement.id}) }}">Modifier</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="7">Aucun résultat trouvé.</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</section>
		</div>
	</div>
{% endblock %}
