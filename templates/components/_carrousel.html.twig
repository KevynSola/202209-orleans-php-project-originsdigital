<div class="row-carrousel mt-5 pb-3">
	<div class="header d-flex flex-wrap">
		<h3 class="title">{{category.name}}</h3>
		<div class="progress-bar"></div>
	</div>
	<div class="bloc-carrousel">
		<button class="handle left-handle">
			<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="arrow bi bi-caret-left-fill" viewbox="0 0 16 16">
				<path d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z"/>
			</svg>
		</button>
		<div class="slider">
			{% for video in videos %}
				{% if app.user or video.public == 1 %}
					<a href="{{path('app_video_show', {'video': video.id})}}" class="link-card">
						<img src="{{video.picture}}" alt="{{video.name}}" class="img-video">
						<div class="title-link">{{video.name}}</div>
					</a>
				{% else %}
					<a href="{{path('app_login')}}" class="link-card-lock">
						<img src="{{video.picture}}" alt="{{video.name}}" class="img-video">
						<div class="lock-overlay">
							<div class="login-mandat mb-3">Connexion obligatoire</div>
							<svg xmlns="http://www.w3.org/2000/svg" width="130" height="130" fill="currentColor" class="bi bi-shield-lock pb-3" viewbox="0 0 16 16">
								<path d="M5.338 1.59a61.44 61.44 0 0 0-2.837.856.481.481 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.725 10.725 0 0 0 2.287 2.233c.346.244.652.42.893.533.12.057.218.095.293.118a.55.55 0 0 0 .101.025.615.615 0 0 0 .1-.025c.076-.023.174-.061.294-.118.24-.113.547-.29.893-.533a10.726 10.726 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.775 11.775 0 0 1-2.517 2.453 7.159 7.159 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7.158 7.158 0 0 1-1.048-.625 11.777 11.777 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 62.456 62.456 0 0 1 5.072.56z"/>
								<path d="M9.5 6.5a1.5 1.5 0 0 1-1 1.415l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99a1.5 1.5 0 1 1 2-1.415z"/>
							</svg>
							<div class="title-link-lock">{{video.name}}</div>
						</div>
					</a>
				{% endif %}
			{% endfor %}
		</div>
		<button class="handle right-handle">
			<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="arrow bi bi-caret-right-fill" viewbox="0 0 16 16">
				<path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
			</svg>
		</button>
	</div>
</div>
