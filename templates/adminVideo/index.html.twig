{% extends 'layoutAdmin.html.twig' %}

{% block title %}Index des vidéos
{% endblock %}

{% block body %}
	<div class="admin-list-container mb-4">
		<div class="row d-flex justify-content-center">
			<h1 class="video-index-title text-center">{{ "index des vidéos"|upper }}</h1>
			<section class="video-summary flex-wrap p-2 m-2 col-10">
				<a class="video-new btn btn-outline-primary my-4" href="{{ path('app_admin_video_new') }}">Ajouter une vidéo</a>

				<table>
					<thead class="video-field pt-2">
						<tr>
							<th>Nom</th>
							<th>Description</th>
							<th>Durée</th>
							<th>Vues</th>
							<th>Lien</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for video in videos %}
							<tr>
								<td class="index-title">{{ video.name }}</td>
								<td>{{ video.description }}</td>
								<td class="">{{ video.duration }}</td>
								<td class="">{{ video.view }}</td>
								<td>{{ video.videoFileName }}</td>
								<td>
									<a class="btn btn-primary mt-2" href="{{ path('app_admin_video_show', {'id': video.id}) }}">Afficher</a>
									<a class="btn btn-secondary mt-2" href="{{ path('app_admin_video_edit', {'id': video.id}) }}">Modifier</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="7">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</section>
		</div>
	</div>
{% endblock %}
