{% extends 'layoutUser.html.twig' %}

{% block title %}
	{{parent()}}
	| Accueil
{% endblock %}

{% block body %}
	<section class="section-home">
		<div class="container">
			<h1 class="text-center">Ze-sport</h1>
			<div class="bloc-video">
				<div class="row justify-content-center">
					{% for video in videos %}
						<div class="col-10 col-md-4 my-4">
							<div class="link-home ratio ratio-16x9 d-flex justify-content-center">
								<video controls>
									<source src="{{video.videoFileName}}" type="video/mp4">
								</video>
							</div>
							<div class="title-view">
								<h2>{{video.name}}</h2>
								<p class="mx-2">{{video.view ~ ' vues'}}</p>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
